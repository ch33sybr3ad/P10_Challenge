<div class="container">

  <img src="https://www.jippostore.com/jippo/img/logo-j.png" alt="web app logo" width="100px" height="100
  px">

  <h1>Job Hunt</h1>

  <div class="front-page">

    <div class="form-group">
      <form id="register" method="post" action="/signin">
        <h1> Sign In </h1>
          <input type="text" class="form-control active" name="username" placeholder="Your Username"><br>

          <input type="password" class="form-control active" name="password" placeholder="Password"><br>

          <input class="form-control home-signin active" type="submit" value="Sign In">
      </form>

      <div class="aftersignin">
        <form method="get" action="/search">
          <h1> Welcome </h1>
          <input class="form-control" type="submit" value="Search"><br>
        </form>
        <form method="get" action="/favorite">
          <input class="form-control" type="submit" value="Favorites"><br>
        </form>
        <form method="get" action="/logout">
          <input class="form-control" type="submit" value="Logout">
        </form>
      </div>

    </div>

    <div class="sbuttons">
      <button class="sign-in btn btn-default before-sign-in" type="button">Sign In!</button>

      <button class="sign-up btn btn-default before-sign-in" type="button">Sign Up!</button>
    </div>

  </div>

</div>
